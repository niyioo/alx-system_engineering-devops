#!/usr/bin/env bash
# Bash script to display the PID and process name of processes containing the word "bash"

# Use pgrep to find PIDs of processes containing the word "bash"
pids=$(pgrep -f bash)

# Print the PID and process name for each matched process
for pid in $pids; do
    process_name=$(ps -p "$pid" -o comm=)
    echo "$pid $process_name"
done
