#!/usr/bin/env bash
# Bash script that creates the file /var/run/myscript.pid containing its PID,
# displays "To infinity and beyond" indefinitely,
# displays "I hate the kill command" when receiving a SIGTERM signal,
# displays "Y U no love me?!" when receiving a SIGINT signal,
# deletes the file /var/run/myscript.pid and terminates itself when receiving a SIGQUIT or SIGTERM signal.

pid_file="/var/run/myscript.pid"

# Function to handle the SIGTERM signal
function sigterm_handler() {
    echo "I hate the kill command"
}

# Function to handle the SIGINT signal
function sigint_handler() {
    echo "Y U no love me?!"
}

# Function to handle the SIGQUIT signal
function sigquit_handler() {
    echo "Received SIGQUIT or SIGTERM signal. Cleaning up and terminating..."
    rm -f "$pid_file"
    exit 0
}

# Register signal handlers
trap sigterm_handler SIGTERM
trap sigint_handler SIGINT
trap sigquit_handler SIGQUIT

# Get the PID of the script and store it in the PID file
echo "$$" > "$pid_file"

# Infinite loop with a sleep of 1 second between iterations
while true; do
    echo "To infinity and beyond"
    sleep 1
done
